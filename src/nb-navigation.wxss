.navigation {
    position:fixed;
    top:0;
    left:0;
    z-index:90;
    width:100%;
    background-color:rgba(255, 255, 255, 1);
  }
  cover-view {}
  .navigation__statusbar {}
  .navigation_type-2 {
    background-color:transparent;
  }
  .navigation.navigation_type-2 {
    position:absolute;
    z-index:100;
  }
  .navigation_type-2 .navigation__txt-title {
    display:block;
    color:#FFF;
  }
  .navigation_type-2 .navigation__navigationbar {
    background-color:transparent;
  }
  .navigation__navigationbar {
    position:relative;
    z-index:1;
  
    margin:0 32rpx;
  }
  .navigation__hd {
    position:absolute;
    top:50%;
    left:0;
    z-index:8;
    /* width:170rpx; */
    transform:translateY(-50%);
  }
  .navigation__btn {
    display:block;
  }
  .navigation__btn-icon {
    display:block;
    width:64rpx;
    height:64rpx;
  }
  .navigation__bd {
    position:absolute;
    top:50%;
    left:180rpx;
    right:180rpx;
    z-index:8;
    text-align:center;
    line-height:1;
    transform:translateY(-50%);
  }
  .navigation__txt-title {
    margin:0 auto;
    text-align:center;
    line-height:1.3;
    font-weight:bold;
    font-size:36rpx;
    color:#000;
  }
  .navigation__txt-description {
    display:block;
    line-height:1.3;
    text-align:center;
    font-size:24rpx;
    color:#777;
  }
